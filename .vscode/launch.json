  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/build/index.js",
      "outFiles": ["${workspaceFolder}/**/*.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug TypeScript in Node.js",
      "runtimeArgs": ["-r", "ts-node/register"],
      "args": ["${workspaceFolder}src/main.ts"],
      "protocol": "inspector",
      "cwd": "${workspaceFolder}",
      "outFiles": ["${workspaceFolder}/bin/**/*.js"]
    }
  ]
}
